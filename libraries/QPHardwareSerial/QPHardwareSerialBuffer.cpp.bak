QPHardwareSerial::QPHardwareSerial( QP_ring_buffer *rx_buffer, 
					  #ifdef QP_POST_METHOD 
					  QActive * *targetAO,
					  #endif
					  #if defined(QP_POST_METHOD) || defined (QP_PUB_METHOD)
					  uint8_t *signalID,
					  bool *eventOnRx,
					  #endif
  volatile uint8_t *ubrrh, volatile uint8_t *ubrrl,
  volatile uint8_t *ucsra, volatile uint8_t *ucsrb,
  volatile uint8_t *udr,
  uint8_t rxen, uint8_t txen, uint8_t rxcie, uint8_t udre, uint8_t u2x)
{
  _rx_buffer = rx_buffer;
  #ifdef QP_POST_METHOD 
  _targetAO = targetAO;
  #endif
  #if defined(QP_POST_METHOD) || defined (QP_PUB_METHOD)
  _signalID = signalID;
  _eventOnRx = eventOnRx;
  #endif
  
    _master = true;
  
  _ubrrh = ubrrh;
  _ubrrl = ubrrl;
  _ucsra = ucsra;
  _ucsrb = ucsrb;
  _udr = udr;
  _rxen = rxen;
  _txen = txen;
  _rxcie = rxcie;
  _udre = udre;
  _u2x = u2x;
}

