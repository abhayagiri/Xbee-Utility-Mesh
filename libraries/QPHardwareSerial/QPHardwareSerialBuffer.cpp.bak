#ifdef QP_POST_METHOD
void QPHardwareSerial::begin(long baud, uint8_t bufferSize, uint8_t signalID, QActive * targetAO)
#endif
{
  uint16_t baud_setting;
  bool use_u2x = true;
  
#if F_CPU == 16000000UL
  // hardcoded exception for compatibility with the bootloader shipped
  // with the Duemilanove and previous boards and the firmware on the 8U2
  // on the Uno and Mega 2560.
  if (baud == 57600) {
    use_u2x = false;
  }
#endif

  if (use_u2x) {
    *_ucsra = 1 << _u2x;
    baud_setting = (F_CPU / 4 / baud - 1) / 2;
  } else {
    *_ucsra = 0;
    baud_setting = (F_CPU / 8 / baud - 1) / 2;
  }

  // assign the baud_setting, a.k.a. ubbr (USART Baud Rate Register)
  *_ubrrh = baud_setting >> 8;
  *_ubrrl = baud_setting;

  if (bufferSize > 0) {
	_rx_buffer->buffer = (unsigned char*)malloc(bufferSize);
	if(_rx_buffer->buffer)
	_rx_buffer->capacity=bufferSize;
  }
  
  #ifdef QP_POST_METHOD
  *_targetAO = targetAO;
  *_signalID = signalID;
  *_eventOnRx = true;
  #endif
  
  sbi(*_ucsrb, _rxen);
  sbi(*_ucsrb, _txen);
  sbi(*_ucsrb, _rxcie);
}

void QPHardwareSerial::end()
{
  cbi(*_ucsrb, _rxen);
  cbi(*_ucsrb, _txen);
  cbi(*_ucsrb, _rxcie);
  
  if (_rx_buffer->buffer != NULL) {
	free(_rx_buffer->buffer);
	_rx_buffer = NULL;
	_rx_buffer->capacity = 0;
  }
}

int QPHardwareSerial::available(void)
{
  return (unsigned int)(_rx_buffer->capacity + _rx_buffer->head - _rx_buffer->tail) % _rx_buffer->capacity;
}

int QPHardwareSerial::peek(void)
{
  if (_rx_buffer->head == _rx_buffer->tail) {
    return -1;
  } else {
    return _rx_buffer->buffer[_rx_buffer->tail];
  }
}

int QPHardwareSerial::read(void)
{
  // if the head isn't ahead of the tail, we don't have any characters
  if (_rx_buffer->head == _rx_buffer->tail || !_rx_buffer->buffer) {
    return -1;
  } else {
    unsigned char c = _rx_buffer->buffer[_rx_buffer->tail];
    _rx_buffer->tail = (unsigned int)(_rx_buffer->tail + 1) % _rx_buffer->capacity;
    
	#if defined(QP_POST_METHOD) || defined(QP_PUB_METHOD)
	if (available() && _master)
		#ifdef QP_POST_METHOD
		send_event(*_signalID, *_targetAO);
		#elif QP_PUB_METHOD
		send_event(*_signalID);
		#endif
	else
		*_eventOnRx = true;
	#endif
	
	return c;
  }
}

int QPHardwareSerial::read(char *buf, uint8_t len)
{
  // if the head isn't ahead of the tail, we don't have any characters
  if (!_rx_buffer->buffer || len <= 0 || _rx_buffer->head == _rx_buffer->tail) {
    buf[0]='\0'; return -1;
  } 
  else {
	uint8_t *tail = &_rx_buffer->tail;
	unsigned int cap = _rx_buffer->capacity;
	unsigned int cnt;
	for (cnt=0; cnt<min(len-1,available()); cnt++) {
		buf[cnt]=_rx_buffer->buffer[*tail];
		*tail = (unsigned int)(*tail + 1) % cap;
	}
	buf[cnt]='\0';
	
	#if defined(QP_POST_METHOD) || defined(QP_PUB_METHOD)
	if (available())
		#ifdef QP_POST_METHOD
		send_event(*_signalID, *_targetAO);
		#elif QP_PUB_METHOD
		send_event(*_signalID);
		#endif
	else
		*_eventOnRx = true;
	#endif
		
	return cnt;
  }
}

int QPHardwareSerial::read(String &str)
{
  // if the head isn't ahead of the tail, we don't have any characters
  if (_rx_buffer->head == _rx_buffer->tail) {
	return -1;
  } 
  else {
	uint8_t *tail = &_rx_buffer->tail;
	unsigned int cap = _rx_buffer->capacity;
	while (available()) {
		str += _rx_buffer->buffer[*tail];
		*tail = (unsigned int)(*tail + 1) % cap;
	}
	
	#if defined(QP_POST_METHOD) || defined(QP_PUB_METHOD)
	if (available())
		#ifdef QP_POST_METHOD
		send_event(*_signalID, *_targetAO);
		#elif QP_PUB_METHOD
		send_event(*_signalID);
		#endif
	else
		*_eventOnRx = true;
	#endif
		
  }
}

void QPHardwareSerial::flush()
{
  // don't reverse this or there may be problems if the RX interrupt
  // occurs after reading the value of rx_buffer_head but before writing
  // the value to rx_buffer_tail; the previous value of rx_buffer_head
  // may be written to rx_buffer_tail, making it appear as if the buffer
  // don't reverse this or there may be problems if the RX interrupt
  // occurs after reading the value of rx_buffer_head but before writing
  // the value to rx_buffer_tail; the previous value of rx_buffer_head
  // may be written to rx_buffer_tail, making it appear as if the buffer
  // were full, not empty.
  _rx_buffer->head = _rx_buffer->tail;
}

void QPHardwareSerial::write(uint8_t c)
{	
  while (!((*_ucsra) & (1 << _udre)))
    ;

  *_udr = c;
}

