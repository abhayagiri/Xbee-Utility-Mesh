inline void handle_char(unsigned char c, QP_ring_buffer *rx_buffer)
{
  uint8_t i = (uint8_t)(rx_buffer->head + 1) % rx_buffer->capacity;
  
  // if we should be storing the received character into the location
  // just before the tail (meaning that the head would advance to the
  // current location of the tail), we're about to overflow the buffer
  // and so we don't write the character or advance the head.
  if (i != rx_buffer->tail) {
	rx_buffer->buffer[rx_buffer->head] = c;
	rx_buffer->head = i;
  }
}

inline void send_event(uint8_t signal, QActive * targetObject)
{
	QEvent* evt = Q_NEW(QEvent, signal);
	targetObject->postFIFO(evt);
}

inline void send_event(uint8_t signal)
{
	QEvent* evt = Q_NEW(QEvent, signal);
	QF::publish(evt);
}

